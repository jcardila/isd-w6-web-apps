<h1>Roll the cards</h1>

<% 
    numeros = ["2","3","4","5","6","7","8","9","10","ace","jack","queen","king"]
    pintas = ["clubs","diamonds","spades","hearts"]

    # numero1 = numeros.sample
    # pinta1 = pintas.sample
    # numero2 = numeros.sample
    # pinta2 = pintas.sample
    # numero3 = numeros.sample
    # pinta3 = pintas.sample
    # numero4 = numeros.sample
    # pinta4 = pintas.sample
    # numero5 = numeros.sample
    # pinta5 = pintas.sample

    #create a deck of cards
    deck = []
    for numero in numeros
        for pinta in pintas
            #create card from rank and suit
            card = "#{numero}_of_#{pinta}"
            deck.push(card)
        end
    end
    shuffled_deck = deck.shuffle
    hand = shuffled_deck[0,5] #los primeros 5 del array
%>

<% for card in hand %>
    <img src="/images/cards/<%= card %>.svg">
<% end %>

<p>
    <a href="/cards">Roll again!<a/>
</p>